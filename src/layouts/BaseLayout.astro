---
import { ClientRouter } from 'astro:transitions';
import BaseHead, { type Props as HeadProps } from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import Nav from '../components/Nav.astro';
import ImgModel from '../components/imgmodel.vue';
import Posthog from '../components/posthog.astro';
import '../styles/global.scss';

export type Props = HeadProps & { showHeader?: boolean; maxWidth?: 'xl' | '2xl' | '3xl' | '4xl' | '5xl' | '6xl' | '7xl' };

const { showHeader = true, maxWidth = '3xl', ...head } = Astro.props;

const maxWidthClasses = {
  'xl': 'max-w-xl',
  '2xl': 'max-w-2xl', 
  '3xl': 'max-w-3xl',
  '4xl': 'max-w-4xl',
  '5xl': 'max-w-5xl',
  '6xl': 'max-w-6xl',
  '7xl': 'max-w-7xl'
} as const;
---

<!doctype html>
<html lang="en" class="antialiased break-words">
  <head>
    <Posthog />
    <BaseHead {...head} />
    <script>
      // Set dark theme as default if not already set
      if (!localStorage.theme) {
        localStorage.theme = 'light';
      }
      if (localStorage.theme === 'dark') {
        document.documentElement.classList.add('dark');
      }
    </script>
    <ClientRouter />
  </head>
  <body class="bg-main text-main" style="overflow-y: scroll;">
    <div class="flex flex-col min-h-screen">
      <div class="px-4 md:px-8 mx-auto max-w-3xl w-full">
        <Nav />
        {showHeader && <Header />}
      </div>
      <main class={`grow px-4 md:px-8 mx-auto w-full ${maxWidthClasses[maxWidth]}`}>
        <slot />
      </main>
      <div class={`px-4 md:px-8 mx-auto w-full ${maxWidthClasses[maxWidth]}`}>
        <Footer />
      </div>
    </div>
    <ImgModel client:load />
  </body>
</html>
